<div class='row mt-5 mb-5'>
  <div class='col col-8 col-sm-8 col-md-6 col-lg-4 m-auto'>
    <div class='card card-body'>
      <h1 class='text-center'>Login</h1>
      <form action='/users/login' method='POST' novalidate>
        <div class='mb-3'>
          <label for='email'>Email</label>
          <input
            class='form-control'
            id='email'
            name='email'
            placeholder='Enter email'
            type='email'
            required
          />
          <div class='valid-feedback'>
            Looks good!
          </div>
          <div class='invalid-feedback'>
            這個欄位必填喔
          </div>
        </div>
        <div class='mb-5'>
          <label for='password'>Password</label>
          <input
            class='form-control'
            id='password'
            name='password'
            type='password'
            onfocus='this.select()'
            placeholder='Enter password'
            required
          />
          <div class='valid-feedback'>
            Looks good!
          </div>
          <div class='invalid-feedback'>
            這個欄位必填喔
          </div>
        </div>
        <button
          class='btn btn-info btn-block'
          id='submit-button'
          type='submit'
        >Login</button>
        <a href='/auth/facebook' class='btn btn-primary btn-block mt-3'>Facebook
          Login</a>
      </form>
      <p class='mt-4'>
        No Account?
        <a href='/users/register'>Register</a>
      </p>
    </div>
  </div>
</div>

<script src='/javascripts/validation.js'></script>